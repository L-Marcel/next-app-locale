{
  "name": "next-app-locale",
  "version": "1.0.7",
  "description": "A simple way to create pages made for different locales in Next (with App Directory)!",
  "main": "dist/index.js",
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "splitting": false,
    "sourcemap": true,
    "clean": true
  },
  "scripts": {
    "lint": "eslint src --ext .ts,.tsx,.js,.jsx --fix",
    "build": "tsup --dts",
    "changes": "changeset",
    "versions": "changeset version",
    "publish": "changeset publish"
  },
  "keywords": [
    "next",
    "locale",
    "localization",
    "i18n"
  ],
  "author": "Lucas Marcel Silva de Brito (http://l-marcel.vercel.app/)",
  "license": "MIT",
  "devDependencies": {
    "@changesets/cli": "^2.26.2",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.45.0",
    "next": "^13.4.10",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tsup": "^7.1.0",
    "typescript": "^5.1.6"
  }
}
